<%- include('partials/header', { title: 'Edit Employee' }) %>

<div class="card mx-auto" style="max-width: 600px;">
  <div class="card-header">
    <h5 class="mb-0">Edit Employee</h5>
  </div>
  <div class="card-body">
    <form action="/update/<%= employee._id %>" method="POST">
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input name="name" value="<%= employee.name %>" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Address</label>
        <input name="address" value="<%= employee.address %>" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Salary</label>
        <input name="salary" type="number" value="<%= employee.salary %>" class="form-control" required />
      </div>
      <div class="mb-3">
        <label class="form-label">Gender</label>
        <select name="gender" class="form-select">
          <option <%= employee.gender === 'Male' ? 'selected' : '' %>>Male</option>
          <option <%= employee.gender === 'Female' ? 'selected' : '' %>>Female</option>
        </select>
      </div>
      <button class="btn btn-success">Update</button>
      <a href="/" class="btn btn-secondary ms-2">Cancel</a>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
